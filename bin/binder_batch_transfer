#!/usr/bin/env ruby
# frozen_string_literal: true

# Usage:
#  binder_batch_transfer development /path/to/etd/quarter/report /remote/binder/dropbox/for/the/quarter

ENV['ROBOT_ENVIRONMENT'] = ARGV.shift
report_file = ARGV.shift
binder_quarter_root = ARGV.shift

require File.expand_path(File.dirname(__FILE__) + '/../config/boot')

bot = Robots::DorRepo::EtdSubmit::BinderBatchTransfer.new(report_file, binder_quarter_root)
bot.process_druids
