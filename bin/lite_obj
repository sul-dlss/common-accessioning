#!/usr/bin/env ruby

require File.expand_path(File.dirname(__FILE__) + '/../config/boot')

opt = ARGV.shift
if opt =~ /create/i
  apo_druid = ARGV.shift
  Dor::AccessionLite.create apo_druid
elsif opt =~ /blast/i
  apo_druid = ARGV.shift
  100.times.each {Dor::AccessionLite.create apo_druid}
elsif opt =~ /reset/i
  druid = ARGV.shift
  Dor::AccessionLite.reset druid
elsif opt =~ /assembly/i
  Dor::AccessionLite.create_assembly
else
  puts 'Usage: lite_obj create [apo_druid] OR lite_obj reset [druid] OR lite_obj assembly'
end
