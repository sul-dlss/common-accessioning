#!/usr/bin/env ruby

require File.expand_path(File.dirname(__FILE__) + '/../config/boot')

opt = ARGV.shift
if opt =~ /create/i
  Dor::AccessionLite.create
elsif opt =~ /reset/i
  druid = ARGV.shift
  Dor::AccessionLite.reset druid
elsif opt =~ /assembly/i
  Dor::AccessionLite.create_assembly
else
  puts "Usage: lite_obj create OR lite_obj reset [druid] OR lite_obj assembly"
end
